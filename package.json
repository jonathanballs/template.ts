{
  "name": "template",
  "version": "0.0.1-dev",
  "description": "A template for a multiplayer io game",
  "main": "index.js",
  "scripts": {
    "start": "node dist/app.js",
    "start:watch": "nodemon dist/app.js",
    "build": "webpack -p",
    "build:watch": "webpack --watch",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "author": "Jonathan Balls",
  "license": "MIT",
  "dependencies": {
    "copy-webpack-plugin": "^4.6.0",
    "express": "^4.16.4",
    "pug": "^2.0.3",
    "socket.io": "^2.1.1",
    "socket.io-client": "^2.1.1"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.3",
    "@types/socket.io": "^2.1.0",
    "@types/socket.io-client": "^1.4.32",
    "jest": "^23.6.0",
    "ts-jest": "^23.10.4",
    "ts-loader": "^5.3.0",
    "typescript": "^3.1.6",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "roots": [
      "<rootDir>"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
